{
  "cSpell.words": ["Threatfox"],
  "editor.defaultFormatter": "ms-python.black-formatter",
  "isort.check": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "isort.args": [
    "--profile",
    "black"
  ],
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  }
}
